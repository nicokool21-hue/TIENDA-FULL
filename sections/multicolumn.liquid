{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}

<div class="multicolumn section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
    {%- endif -%}

    <div class="grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down">
      {%- for block in section.blocks -%}
        <div class="grid__item multicolumn-card" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <div class="multicolumn-card__image-wrapper">
              {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', widths: '200, 400, 600', alt: block.settings.image.alt | default: block.settings.title }}
            </div>
          {%- endif -%}
          <div class="multicolumn-card__info">
            {%- if block.settings.title != blank -%}
              <h3 class="multicolumn-card__title">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.text != blank -%}
              <div class="multicolumn-card__text">{{ block.settings.text }}</div>
            {%- endif -%}
            {%- if block.settings.link_label != blank -%}
              <a href="{{ block.settings.link }}" class="button button--secondary" aria-label="{{ 'accessibility.view_more' | t }}: {{ block.settings.title }}">
                {{ block.settings.link_label }}
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.multicolumn.name",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Multicolumn",
      "label": "t:sections.multicolumn.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.multicolumn.settings.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.multicolumn.settings.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.multicolumn.settings.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.multicolumn.settings.heading_size.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "t:sections.multicolumn.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "1",
      "label": "t:sections.multicolumn.settings.columns_mobile.label",
      "options": [
        {
          "value": "1",
          "label": "t:sections.multicolumn.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.multicolumn.settings.columns_mobile.options__2.label"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Column",
          "label": "t:sections.multicolumn.blocks.column.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.multicolumn.blocks.column.settings.text.label"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "t:sections.multicolumn.blocks.column.settings.link_label.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.multicolumn.blocks.column.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.multicolumn.presets.name",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ],
  "translations": true
}
{% endschema %}